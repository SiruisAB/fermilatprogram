# 包含项目文档
include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# 包含配置文件
include *.yaml
include *.yml
include *.cfg
include *.ini

# 包含数据文件
recursive-include fermilatprogram *.yaml
recursive-include fermilatprogram *.yml
recursive-include fermilatprogram *.txt
recursive-include fermilatprogram *.md
recursive-include fermilatprogram *.cfg

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude .git*
global-exclude .DS_Store
global-exclude __pycache__
prune .git
prune __pycache__
prune *.egg-info